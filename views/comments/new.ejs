<% include ../partials/header %>

<div class="wrapper addcamp container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6 text-center">
            <h1>Add New Comment to <%= campground.name %> </h1>
            
            <form action="/campgrounds/<%= campground._id %>/comments" method="post">
                <div class="form-group">
                    <textarea cols="10" class="form-control" type="field-area" name="comment[text]" placeholder="comment..."></textarea>    
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">SUBMIT</button>
                </div>
            </form>
            <a href="/campgrounds">back to campground</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>