<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1>Edit Campground</h1>
        <form method="post" action="/campgrounds/<%= editCampground._id %>?_method=PUT">
            <div class="form-group">
                <input class="form-control" type="text" name="camps[name]" value="<%= editCampground.name %>">    
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="camps[image]" value="<%= editCampground.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="camps[description]" value="<%= editCampground.description %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">SUBMIT</button>
            </div>
        </form>
        <a href="/campgrounds">back to campground</a>
    </div>
</div>

<% include ../partials/footer %>