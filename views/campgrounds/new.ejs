<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1>Add New Campground</h1>
        <form method="post" action="/campgrounds">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="camp name">    
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="imageUrl">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="description" placeholder="description">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">SUBMIT</button>
            </div>
        </form>
        <a href="/campgrounds">back to campground</a>
    </div>
</div>

<% include ../partials/footer %>